@model  Jako.Models.Nodo
@{
    ViewBag.Title = "Question";
}
<h2>Question</h2>
@using (Html.BeginForm("Listo", "Home", FormMethod.Post, new { id = "frm-pensando" }))
{
    if (Model.ObtenerP(Model.Id).hizq == 0 && Model.ObtenerP(Model.Id).hder == 0)
    {
        @Html.HiddenFor(x => x.Id)

        <blockquote class="blockquote text-center align-items-center">
            <h1 class="display-4">¿En que estas pensando?</h1>
            <div class="form-group">
                <h3>Estas pensando en</h3>
                <div style="display:flex; justify-content:center; margin-left:auto; margin-right:auto; align-items:center; text-align:center;">
                    <input type="text" name="pregunta" />
                </div>
            </div>
            <div>
                <input type="hidden" name="padre" value="@Model.Id" />
                <input type="hidden" name="hder" value="0" />
                <input type="hidden" name="hiz" value="0" />
            </div>
            <div class="text-right">
                <button type="submit" class="btn-primary">Listo!</button>
            </div>

        </blockquote>
    }
    else
    {
        @Html.HiddenFor(x => x.Id)
        <input type="text" name="Id" value="@(Model.hizq > 0 ? Model.hizq : Model.hder)" />
        <blockquote class="blockquote text-center align-items-center">
            <h1 class="display-4">¿Cual es la diferencia de lo que estabas pensando con: @(Model.hizq > 0 ? Model.ObtenerP(Model.hizq.GetValueOrDefault()).pregunta : Model.ObtenerP(Model.hder.GetValueOrDefault()).pregunta)?</h1>
            <div class="form-group">
                <h3>Define un concepto de tal diferencia</h3>
                <div style="display:flex; justify-content:center; margin-left:auto; margin-right:auto; align-items:center; text-align:center;">
                    <input type="text" name="pregunta"/>

                </div>
            </div>
            <div>
                    <input type="hidden" name="padre" value="@(Model.hizq > 0 ? Model.hizq : Model.hder)" />
                    <input type="hidden" name="hder" value="0" />
                    <input type="hidden" name="hiz" value="0" />
            </div>
            <div class="text-right">
                <button type="submit" class="btn-primary">Listo!</button>
            </div>

        </blockquote>
    }

}
